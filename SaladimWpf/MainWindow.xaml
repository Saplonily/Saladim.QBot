<Window x:Class="SaladimWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaladimWpf"
        mc:Ignorable="d"
        Title="某个智障Saladim Bot的管理窗口 (Powered by WPF .NET)" Height="600" Width="1200">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TabItem">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Padding" Value="10,0,10,0"/>
            </Style>
            <LinearGradientBrush x:Key="GrayBackgroundBrush" StartPoint="0.3,0" EndPoint="0.6,1">
                <GradientStop Offset="0" Color="#373738"/>
                <GradientStop Offset="0.5" Color="#484849"/>
                <GradientStop Offset="1" Color="#373738"/>
            </LinearGradientBrush>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="5,0,5,0"/>
                <Setter Property="Margin" Value="5"/>
                <Setter Property="MinWidth" Value="80"/>
            </Style>
        </Grid.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TabControl Grid.Column="1" Grid.RowSpan="2">
                <TabItem Header="主页">
                    <Border Padding="10">
                        <StackPanel>
                            <WrapPanel>
                                <CheckBox x:Name="ClientStateCheckBox"
                                      Content="客户端开启状态" Margin="5"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Checked="ClientStateCheckBox_Checked"
                                      Unchecked="ClientStateCheckBox_Unchecked"/>
                            </WrapPanel>
                            <WrapPanel>
                                <CheckBox x:Name="ScrollToEndCheckBox" Margin="5"
                                      VerticalContentAlignment="Center" VerticalAlignment="Center"
                                      IsChecked="True">
                                    新日志自动滚动到底部
                                </CheckBox>
                            </WrapPanel>
                            <WrapPanel>
                                <Button x:Name="ClearOutPutButton" Content="清空控制台" Click="ClearOutPutButton_Click"/>
                                <Button x:Name="FlushLogButton" Content="Flush日志输出流" Click="FlushLogButton_Click"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>
                </TabItem>
                <TabItem Header="猜数自动机控制">
                    <StackPanel>
                        <WrapPanel>
                            <CheckBox x:Name="GuessNumBotCheckBox"
                                      Content="猜数自动机开启状态"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center"
                                      Checked="GuessNumBotCheckBox_Checked"
                                      Unchecked="GuessNumBotCheckBox_Unchecked"/>
                        </WrapPanel>
                        <WrapPanel>
                            <TextBlock Text="猜数延迟(ms):" TextAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox x:Name="GuessNumBotDelayTextBox" Text="" MinWidth="120" Margin="5"/>
                            <Button x:Name="UpdateGuessNumBotDelay" Content="更新延迟" Click="UpdateGuessNumBotDelay_Click"/>
                        </WrapPanel>
                    </StackPanel>
                </TabItem>
            </TabControl>
            <TextBlock Text="控制台日志" TextAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
            <TextBox Grid.Row="1" Grid.Column="0"
                     TextWrapping="Wrap" IsReadOnly="True"
                     x:Name="TextBoxLogging"
                     VerticalScrollBarVisibility="Auto"/>
        </Grid>
    </Grid>
</Window>
